package reverse_array;
import java.util.*;
public class Reverse_Array {

	public static void main(String[] args) {
		int i,n;
		int arr[]=new int[20];
		Scanner sc=new Scanner(System.in);
		System.out.println("Enter the size of elements need to be entered in array");
		n=sc.nextInt();
		System.out.println("Enter those elements in array");
		for(i=0;i<n;i++)
		{
			arr[i]=sc.nextInt();
		}
		System.out.println("Reversed array is : ");
		for(i=n-1;i>=0;i--)
		{
			System.out.println(arr[i]);
		}
	}

}
